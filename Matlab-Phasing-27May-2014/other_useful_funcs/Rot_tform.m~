function [ out] = Rot_tform( in,T )
%UNTITLED4 Summary of this function goes here
%   Detailed explanation goes here

%       A(1)            B(1)          C(1)
out(1)=T(1,1)*in[0]+T(1,2)*in[1]+T(1,3)*in[2];

%       A(2)            B(2)          C(2)
out(2)=T(2,1)*in[0]+T(2,2)*in[1]+T(2,3)*in[2];

%       A(3)            B(3)          C(3)
out(3)=T(3,1)*in[0]+T(3,2)*in[1]+T(3,3)*in[2];


end

